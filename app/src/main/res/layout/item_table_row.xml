<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:background="@drawable/card_background"
            android:orientation="vertical">

            <androidx.gridlayout.widget.GridLayout
                android:layout_width="wrap_content"
                android:layout_height="170dp">

                <TextView
                    android:id="@+id/textName"
                    android:layout_width="140dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:text="XXXXXXXXXXXX"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_column="0" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="90dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="19dp"
                    android:src="@drawable/avatar"
                    app:layout_column="2"
                    app:layout_columnSpan="2"
                    app:layout_row="0"
                    app:layout_rowSpan="3" />

                <TextView
                    android:id="@+id/textPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:paddingTop="7dp"
                    android:text="+91 1234567890"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    app:layout_column="0"
                    app:layout_row="1" />

                <TextView
                    android:id="@+id/textPurposeVal"
                    android:layout_width="140dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"
                    android:text="Visiting our child xxxx xxxxxxxxxx"
                    android:textColor="@color/white"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    app:layout_column="0"
                    app:layout_row="2" />

                <TextView
                    android:id="@+id/dateEntery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="12dp"
                    android:text="07-09-2003"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    app:layout_column="1"
                    app:layout_row="0" />

                <TextView
                    android:id="@+id/inTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="12dp"
                    android:text="09:45 A.M"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_column="1"
                    app:layout_row="1" />

                <TextView
                    android:id="@+id/outTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:paddingTop="3dp"
                    android:text="12.45 A.M"
                    android:textColor="#e03131"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_column="1"
                    app:layout_row="2"
                    app:layout_rowSpan="2" />

                <TextView
                    android:id="@+id/nameSecurity"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="@color/black"
                    android:text="XXXXXX"
                    android:textColor="#e03131"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:layout_column="0"
                    app:layout_row="4"
                    app:layout_rowSpan="2" />
            </androidx.gridlayout.widget.GridLayout>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
